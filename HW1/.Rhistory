mean(data$DayPassPriceAdult, na.rm=TRUE)
# Simple color helpers (base R only)
cols3  <- c("#4E79A7", "#F28E2B", "#E15759")
cols4  <- c("#4E79A7", "#59A14F", "#F28E2B", "#E15759")
cols6  <- c("#4E79A7","#59A14F","#F28E2B","#E15759","#B07AA1","#9C755F")
